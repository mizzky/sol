{
  "name": "sol_coffeesys_fullstack",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/sol_coffeesys",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "mhutchie.git-graph",
        "yzhang.markdown-all-in-one",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "cweijan.vscode-database-client2"
      ],
      "settings": {
        // ターミナルのフォントなどはホスト側の設定に依存しますが、
        // コンテナ内でStarshipをデフォルトにするための設定
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:1": {
      "configureZshAsDefaultShell": true
    }
  },
  "forwardPorts": [3000, 8080, 5432],
  "remoteUser": "vscode",
  "postCreateCommand": "sudo chown -R $(whoami):$(whoami) /go",
  "remoteEnv": {
    "JWT_SECRET": "${containerEnv:JWT_SECRET}"
  }
}